<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="dev.ln13.cse360project.ProviderPortal">
    <HBox alignment="CENTER" spacing="20.0">
        <Label text="Provider Access Portal" textFill="#0f0f0f"/>
    </HBox>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label fx:id="portalName"/>
    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="viewAppointmentsButton" mnemonicParsing="false" onAction="#viewAppointments">
            <graphic>
                <Label text="📅"/>
                <Label text="Appointments"/>
            </graphic>
        </Button>
        <Button fx:id="viewPrescriptionsButton" mnemonicParsing="false" onAction="#viewPrescriptions">
            <graphic>
                <Label text="💊"/>
                <Label text="Prescriptions"/>
            </graphic>
        </Button>
        <Button fx:id="viewMessagesButton" mnemonicParsing="false" onAction="#viewMessages">
            <graphic>
                <Label text="📧"/>
                <Label text="Messages"/>
            </graphic>
        </Button>
        <Button fx:id="viewBillingButton" mnemonicParsing="false" onAction="#viewBilling">
            <graphic>
                <Label text="💵"/>
                <Label text="Billing"/>
            </graphic>
        </Button>
        <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#settings">
            <graphic>
                <Label text="⚙️"/>
                <Label text="Settings"/>
            </graphic>
        </Button>
    </HBox>
</VBox>
