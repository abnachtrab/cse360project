<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="dev.ln13.cse360project.frontend.ProviderLogin">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label fx:id="appNameText" styleClass="title"/>
    <Label fx:id="portalName"/>

    <!-- Text Fields -->
    <HBox alignment="CENTER" spacing="10">
        <Label text="Width:"/>
        <TextField fx:id="widthTextField"/>
    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <Label text="Height:"/>
        <TextField fx:id="heightTextField"/>
    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <Label text="Heart Rate:"/>
        <TextField fx:id="heartRateTextField"/>
    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <Label text="Blood Pressure:"/>
        <TextField fx:id="bloodPressureTextField"/>
    </HBox>

    <!-- Patient ID Text Field -->
    <HBox alignment="CENTER" spacing="10">
        <Label text="Patient ID:"/>
        <TextField fx:id="patientIDTextField"/>
    </HBox>

    <!-- Submit Button -->
    <Button text="Submit" onAction="#handleSubmitButtonClicked"/>
</VBox>
